<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.controllers.WelcomePageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome To The Gamer Showcase!" textAlignment="CENTER" wrapText="true">
        <font>
            <Font name="Times New Roman Bold" size="62.0" />
        </font></Label>
    <Button onAction="#loginPageHandler" text="Sign In!">
        <font>
            <Font name="Times New Roman" size="21.0" />
        </font></Button>
    <Label text="New to Gamer Showcase? Create an account!" textAlignment="CENTER" textFill="#0000009c">
        <font>
            <Font name="System Italic" size="18.0" />
        </font>
    </Label>
    <Button onAction="#registerPageHandler" mnemonicParsing="false" text="Create an account">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</VBox>
